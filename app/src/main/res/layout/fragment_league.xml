<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.league_screen.screen.LeagueFragment">

    <TextView
        android:id="@+id/choice_league_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/choiсe_league"
        android:textSize="@dimen/text_size_20sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/layout_margin_10dp"
        android:layout_marginStart="@dimen/layout_margin_10dp"
        android:layout_marginEnd="@dimen/layout_margin_10dp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/choice_league_rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/choice_league_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/item_fragment_league"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:layout_marginStart="@dimen/layout_margin_10dp"
        android:layout_marginEnd="@dimen/layout_margin_10dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>