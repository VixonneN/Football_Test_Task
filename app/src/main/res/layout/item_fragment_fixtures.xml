<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="@dimen/layout_margin_10dp"
    >

    <ImageView
        android:id="@+id/first_team_iv"
        android:layout_width="@dimen/image_view_size"
        android:layout_height="@dimen/image_view_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/nullCD"
        tools:src="@tools:sample/avatars"
        />

    <TextView
        android:id="@+id/first_team_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/first_team_iv"
        app:layout_constraintBottom_toBottomOf="@id/first_team_iv"
        app:layout_constraintStart_toEndOf="@id/first_team_iv"
        tools:text="@tools:sample/cities"
        android:layout_marginStart="@dimen/layout_margin_10dp"
        android:textSize="@dimen/text_size_12sp"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/second_team_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/second_team_iv"
        app:layout_constraintBottom_toBottomOf="@id/second_team_iv"
        app:layout_constraintEnd_toStartOf="@id/second_team_iv"
        tools:text="@tools:sample/cities"
        android:layout_marginEnd="@dimen/layout_margin_10dp"
        android:textSize="@dimen/text_size_12sp"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/scope_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="10 : 10"
        app:layout_constraintBaseline_toBaselineOf="@id/first_team_name_tv"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_20sp"
        />


    <ImageView
        android:id="@+id/second_team_iv"
        android:layout_width="@dimen/image_view_size"
        android:layout_height="@dimen/image_view_size"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/nullCD"
        tools:src="@tools:sample/avatars"
        />

</androidx.constraintlayout.widget.ConstraintLayout>